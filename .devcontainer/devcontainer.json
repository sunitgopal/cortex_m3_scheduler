{
    "build": { "dockerfile": "Dockerfile"},
    "customizations": {
        "vscode": {
        "settings": {
            "editor.fontSize": 16,
            "terminal.integrated.fontSize": 16,
            "workbench.iconTheme": "vs-seti",
            "editor.minimap.enabled": false,
            "workbench.colorTheme": "Dark (Visual Studio - C/C++)",
            "workbench.preferredDarkColorTheme": "Dark (Visual Studio - C/C++)",
            "editor.wordWrapColumn": 120,
            "workbench.startupEditor": "none",
            "editor.useTabStops": false,
            "files.trimTrailingWhitespace": true,
            "git.autorefresh": false,
            "terminal.integrated.cursorBlinking": true,
            "terminal.integrated.cursorStyle": "line",
            "debug.console.fontSize": 16,
            "editor.rulers": [
                120
            ],
            "terminal.integrated.sendKeybindingsToShell": true,
            "extensions.ignoreRecommendations": true,
            "remote.autoForwardPorts": false
        },
        "extensions": [
            "ZixuanWang.linkerscript",
            "ms-vscode.cpptools",
            "maziac.hex-hover-converter",
            "ms-vscode.hexeditor",
            "trond-snekvik.gnu-mapfiles",
            "joshuabernstein.armextensionhelpers"
            ]
        }
    },
    "postCreateCommand": "pip3 install pygments && wget -P ~ https://git.io/.gdbinit"
}
